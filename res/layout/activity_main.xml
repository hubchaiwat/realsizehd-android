<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btn_250gb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_500gb"
        android:layout_alignBottom="@+id/btn_500gb"
        android:layout_alignLeft="@+id/btn_2tb"
        android:height="@dimen/button_height"
        android:onClick="btn250gb_click"
        android:text="@string/size5"
        android:width="@dimen/button_width" />

    <Button
        android:id="@+id/btn_125gb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_250gb"
        android:layout_alignBottom="@+id/btn_250gb"
        android:layout_alignLeft="@+id/btn_1tb"
        android:height="@dimen/button_height"
        android:onClick="btn125gb_click"
        android:text="@string/size6"
        android:width="@dimen/button_width" />

    <Button
        android:id="@+id/btn_120gb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_240gb"
        android:layout_alignBottom="@+id/btn_240gb"
        android:layout_alignLeft="@+id/btn_125gb"
        android:height="@dimen/button_height"
        android:onClick="btn120gb_click"
        android:text="@string/size9"
        android:width="@dimen/button_width" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/btn_500gb"
        android:layout_marginTop="23dp"
        android:text="@string/head2"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn_240gb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_250gb"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="16dp"
        android:height="@dimen/button_height"
        android:onClick="btn240gb_click"
        android:text="@string/size8"
        android:width="@dimen/button_width" />

    <Button
        android:id="@+id/btn_480gb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_240gb"
        android:layout_alignBottom="@+id/btn_240gb"
        android:layout_alignLeft="@+id/btn_500gb"
        android:height="@dimen/button_height"
        android:onClick="btn480gb_click"
        android:text="@string/size7"
        android:width="@dimen/button_width" />

    <Button
        android:id="@+id/btn_1tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_500gb"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/btn_2tb"
        android:height="@dimen/button_height"
        android:onClick="btn1tb_click"
        android:text="@string/size3"
        android:width="@dimen/button_width" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_480gb"
        android:layout_marginTop="26dp"
        android:text="@string/head3"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/sizeTB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:layout_alignLeft="@+id/btn_480gb"
        android:layout_alignRight="@+id/btn_120gb"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="16dp"
        android:editable="false"
        android:ems="10"
        android:text="Please select size from above">

    </EditText>

    <Button
        android:id="@+id/btn_2tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:height="@dimen/button_height"
        android:onClick="btn2tb_click"
        android:text="@string/size2"
        android:width="@dimen/button_width" />

    <Button
        android:id="@+id/btn_4tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_2tb"
        android:layout_alignBottom="@+id/btn_2tb"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/btn_2tb"
        android:height="@dimen/button_height"
        android:onClick="btn4tb_click"
        android:text="@string/size1"
        android:width="@dimen/button_width" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_4tb"
        android:layout_alignRight="@+id/textView3"
        android:layout_marginBottom="18dp"
        android:text="@string/head1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/sizeMB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:layout_alignLeft="@+id/sizeGB"
        android:layout_alignRight="@+id/sizeGB"
        android:layout_below="@+id/sizeGB"
        android:editable="false"
        android:ems="10" />

    <EditText
        android:id="@+id/sizeGB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:layout_alignLeft="@+id/sizeTB"
        android:layout_alignRight="@+id/sizeTB"
        android:layout_below="@+id/sizeTB"
        android:editable="false"
        android:ems="10" />

    <Button
        android:id="@+id/btn_500gb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_4tb"
        android:layout_below="@+id/btn_4tb"
        android:layout_marginTop="11dp"
        android:height="@dimen/button_height"
        android:onClick="btn500gb_click"
        android:text="@string/size4"
        android:width="@dimen/button_width" />

</RelativeLayout>